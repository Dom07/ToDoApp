<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="400dp">
            <TextView
                android:id="@+id/tvLabelTaskName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="25dp"
                android:text="Task Name:"
                android:textSize="15dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etNewTaskName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/tvLabelTaskName"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="25dp"
                android:ems="10"
                android:inputType="textPersonName"
                />

            <TextView
                android:id="@+id/tvLabelTags"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etNewTaskName"
                android:layout_marginLeft="25dp"
                android:text="Enter Tags"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_marginTop="25dp"/>

            <EditText
                android:id="@+id/etNewTags"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvLabelTags"
                android:layout_marginLeft="25dp"
                android:ems="10"
                />

            <TextView
                android:id="@+id/tvLabelDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/etNewTags"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="25dp"
                android:text="Select Date:"
                android:textSize="15dp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinnerDateView"
                android:layout_width="150dp"
                android:layout_height="20dp"
                android:layout_below="@+id/tvLabelDate"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp">
            </Spinner>

            <TextView
                android:id="@+id/tvCustomDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvLabelDate"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/spinnerDateView"
                />

            <TextView
                android:id="@+id/tvLabelTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/spinnerDateView"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="25dp"
                android:text="Select Time:"
                android:textSize="15dp"
                android:textStyle="bold"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvLabelTime"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:text="Select Time"
                android:id="@+id/btnTimePicker"/>
    </RelativeLayout>
</RelativeLayout>