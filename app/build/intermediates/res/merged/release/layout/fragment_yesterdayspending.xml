<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.developers.mytodoapp.YesterdaysPendingFragment"
    android:layout_margin="10dp"
    android:id="@+id/srlYesterdaysPendingLayout">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvYesterdaysPendingTask"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>

        <TextView
            android:id="@+id/tvNoPendingTaskYest"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="This list is empty, task(s) that you miss to complete today will be visible here."
            android:textSize="20sp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

</android.support.v4.widget.SwipeRefreshLayout>
