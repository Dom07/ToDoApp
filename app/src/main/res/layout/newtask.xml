<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp">

            <TextView
                android:id="@+id/tvLabelTaskName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="25dp"
                android:text="Task Name:"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etNewTaskName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvLabelTaskName"
                android:layout_marginLeft="25dp"
                android:layout_marginStart="25dp"
                android:ems="10"
                android:inputType="textPersonName"
                />


        <TextView
            android:layout_below="@+id/etNewTaskName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remind Me"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="25dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:id="@+id/tvLabelRemindMe"
            />


    <Switch
        android:id="@+id/switchReminder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/etNewTaskName"
        android:layout_alignRight="@+id/etNewTaskName"
        android:layout_alignTop="@+id/tvLabelRemindMe" />

    <TextView
        android:id="@+id/tvLabelReminderTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvLabelRemindMe"
        android:textSize="15sp"
        android:textStyle="bold"
        android:text="Reminder Time"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tap here to set reminder time"
        android:id="@+id/tvReminder"
        android:textSize="14sp"
        android:layout_below="@+id/tvLabelReminderTime"/>

</RelativeLayout>